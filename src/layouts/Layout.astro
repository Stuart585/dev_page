---
import Header from "../components/structure/Header.astro";
import Footer from "../components/structure/Footer.astro";
// import "../styles/global.css";
export interface Props {
  title?: string;
}
const { title = "default tile" } = Astro.props as Props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Stuart Barker Dev</title>
  </head>
  <body class="flex justify-center">
    <div class="w-11/12 md:w-7/12 print:w-full">
      <Header />
      <slot />
      <Footer />
    </div>
  </body>
</html>
